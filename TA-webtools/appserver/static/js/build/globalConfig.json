{
    "meta": {
        "name": "TA-webtools",
        "displayName": "Webtools",
        "version": "2.0.0",
        "apiVersion": "3.0.0",
        "restRoot": "TA_webtools"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                }
            ]
        },
        "inputs": {
            "title": "Inputs",
            "description": "Manage your data inputs",
            "table": {
                "header": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    }
                ],
                "moreInfo": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    },
                    {
                        "field": "protocol",
                        "label": "Protocol"
                    },
                    {
                        "field": "address",
                        "label": "Address"
                    },
                    {
                        "field": "port",
                        "label": "Port"
                    },
                    {
                        "field": "count",
                        "label": "Count"
                    },
                    {
                        "field": "timeout",
                        "label": "Timeout"
                    },
                    {
                        "field": "http_method",
                        "label": "HTTP Method"
                    },
                    {
                        "field": "uri",
                        "label": "URI"
                    },
                    {
                        "field": "verify_ssl",
                        "label": "Verify SSL"
                    },
                    {
                        "field": "request_headers",
                        "label": "Request Headers"
                    },
                    {
                        "field": "payload",
                        "label": "Payload"
                    },
                    {
                        "field": "username",
                        "label": "Username"
                    },
                    {
                        "field": "password",
                        "label": "Password"
                    }
                ],
                "actions": [
                    "edit",
                    "enable",
                    "delete",
                    "clone"
                ]
            },
            "services": [
                {
                    "name": "test_port_input",
                    "title": "Test Port Input",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "help": "Time interval of input in seconds.",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                    "errorMsg": "Interval must be an integer."
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "blackList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        },
                        {
                            "field": "protocol",
                            "label": "Protocol",
                            "help": "UDP is deprecated but left here for backwards compatibility",
                            "required": true,
                            "type": "radio",
                            "defaultValue": "1",
                            "options": {
                                "items": [
                                    {
                                        "value": "1",
                                        "label": "TCP"
                                    },
                                    {
                                        "value": "0",
                                        "label": "UDP"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "address",
                            "label": "Address",
                            "help": "",
                            "required": true,
                            "type": "text",
                            "defaultValue": "127.0.0.1",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "port",
                            "label": "Port",
                            "help": "",
                            "required": true,
                            "type": "text",
                            "defaultValue": "8000",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "count",
                            "label": "Count",
                            "help": "",
                            "required": false,
                            "type": "text",
                            "defaultValue": "1",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "timeout",
                            "label": "Timeout",
                            "help": "",
                            "required": false,
                            "type": "text",
                            "defaultValue": "60",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "curl_inputs",
                    "title": "Curl Inputs",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "help": "Time interval of input in seconds.",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                    "errorMsg": "Interval must be an integer."
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "blackList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        },
                        {
                            "field": "http_method",
                            "label": "HTTP Method",
                            "help": "",
                            "required": true,
                            "type": "radio",
                            "defaultValue": "get",
                            "options": {
                                "items": [
                                    {
                                        "value": "get",
                                        "label": "Get"
                                    },
                                    {
                                        "value": "post",
                                        "label": "Post"
                                    },
                                    {
                                        "value": "delete",
                                        "label": "Delete"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "uri",
                            "label": "URI",
                            "help": "",
                            "required": true,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "https://localhost:8089/services"
                            }
                        },
                        {
                            "field": "enforcehttps",
                            "label": "Enforce HTTPS",
                            "help": "enables disables the enforcing the HTTPS in the curl command. By default is enabled",
                            "required": false,
                            "type": "radio",
                            "defaultValue": "1",
                            "options": {
                                "items": [
                                    {
                                        "value": "1",
                                        "label": "True"
                                    },
                                    {
                                        "value": "0",
                                        "label": "False"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "verify_ssl",
                            "label": "Verify SSL",
                            "help": "",
                            "required": false,
                            "type": "radio",
                            "defaultValue": "0",
                            "options": {
                                "items": [
                                    {
                                        "value": "1",
                                        "label": "True"
                                    },
                                    {
                                        "value": "0",
                                        "label": "False"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "request_headers",
                            "label": "Request Headers",
                            "help": "JSON formated HTTP Headers",
                            "required": false,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "{\"Content-Type\": \"application/json\", \"user-agent\":\"my-app/0.0.1\"}"
                            }
                        },
                        {
                            "field": "payload",
                            "label": "Payload",
                            "help": "JSON formated payload to send with the request.",
                            "required": false,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "{\"foo\":\"bar\"}"
                            }
                        },
                        {
                            "field": "username",
                            "label": "Username",
                            "help": "",
                            "required": false,
                            "type": "text",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "password",
                            "label": "Password",
                            "help": "",
                            "required": false,
                            "type": "text",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "******"
                            }
                        }
                    ]
                }
            ]
        }
    }
}